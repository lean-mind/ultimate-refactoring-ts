  "license": "UNLICENSED",
  "homepage": "https://github.com/lean-mind/ultimate-refactoring-ts.git#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "~5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
