{
  "name": "ultimate-refactoring-ts",
  "version": "1.0.0",
  "description": "Ultimate Refactoring Course in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "ensure": "npm run type-check && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lean-mind/ultimate-refactoring-ts.git"
  },
  "keywords": [],
